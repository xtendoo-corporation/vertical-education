<odoo>

  <record id="certification_category" model="ir.module.category">
    <field name="name">Education Certification</field>
  </record>

  <record id="certification_user" model="res.groups">
    <field name="name">User</field>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_root'))]"/>
    <field name="category_id" ref="education_certification.certification_category"/>
  </record>

  <record id="certification_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id" ref="education_certification.certification_category"/>
    <field name="implied_ids" eval="[(4, ref('education_certification.certification_user'))]"/>
  </record>

</odoo>
