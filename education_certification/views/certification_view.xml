<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_education_certification_form" model="ir.ui.view">
      <field name="name">view.education.certification.form</field>
      <field name="model">education.certification</field>
      <field name="arch" type="xml">
        <form string="Education Certification">
          <sheet>
            <group>
              <group>
                <field name="name" required="1"/>
              </group>
              <group>
                <field name="code"/>
              </group>
            </group>
            <group name="main" col="4">
              <field name="student_id"/>
              <field name="course_id"/>
              <field name="record_id" domain="[('student_id', '=', student_id)]"/>
              <field name="record_subject_id"/>
              <field name="subject_id"/>
              <field name="type"/>
              <field name="reception_date"/>
              <field name="company_id" groups="base.group_system"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_education_certification_tree" model="ir.ui.view">
      <field name="name">view.education.certification.tree</field>
      <field name="model">education.certification</field>
      <field name="arch" type="xml">
        <tree string="Education Certification">
          <field name="reception_date"/>
          <field name="name"/>
          <field name="student_id"/>
          <field name="course_id"/>
          <field name="subject_id"/>
          <field name="record_id"/>
          <field name="record_subject_id"/>
          <field name="type"/>
          <field name="company_id" groups="base.group_system"/>
        </tree>
      </field>
    </record>

    <record id="view_education_certification_search" model="ir.ui.view">
      <field name="name">view.education.certification.search</field>
      <field name="model">education.certification</field>
      <field name="arch" type="xml">
        <search string="Education Certification">
          <field name="name"/>
          <field name="type"/>
          <field name="student_id"/>
          <field name="course_id"/>
          <field name="record_id"/>
          <field name="subject_id"/>
          <field name="record_subject_id"/>
          <field name="reception_date"/>
          <group string="Group By" name="groupby">
            <filter string="name" context="{'group_by': 'name'}"/>
            <filter string="Type" context="{'group_by': 'type'}"/>
            <filter string="Student" context="{'group_by': 'student_id'}"/>
            <filter string="Course" context="{'group_by': 'course_id'}"/>
            <filter string="Record" context="{'group_by': 'record_id'}"/>
            <filter string="Subject" context="{'group_by': 'subject_id'}"/>
            <filter string="Record Subject" context="{'group_by': 'record_subject_id'}"/>
            <filter string="Reception Date" context="{'group_by': 'reception_date'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="education_certification_action" model="ir.actions.act_window">
      <field name="name">Education Certification</field>
      <field name="res_model">education.certification</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Education Certification.
        </p>
      </field>
    </record>

    <record id="certification_sequence_1" model="ir.sequence">
      <field name="name">Certification Sequence</field>
      <field name="code">education.certification</field>
      <field name="prefix">CER</field>
      <field name="padding">4</field>
      <field eval="1" name="company_id"/>
    </record>

    <menuitem id="education_certification_root" parent="education.education_base_menu" name="Certification" sequence="50"/>
    <menuitem id="education_certification_menu" parent="education_certification_root" action="education_certification_action" sequence="20"/>

  </data>
</openerp>
