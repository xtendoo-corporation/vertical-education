<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_timetable_group_form" model="ir.ui.view">
    <field name="name">timetable.group.form</field>
    <field name="model">education.group</field>
    <field name="inherit_id" ref="education.view_education_group_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
        <button type="object" class="oe_stat_button" icon="fa fa-clock-o" name="open_group_timetable" attrs="{'invisible': [('state', '=', 'draft')]}">
          <div class="o_form_field o_stat_info">
            <span class="o_stat_value">
              <!-- <field name="invoices_count" modifiers="{'readonly': true}"/> -->
            </span>
            <span class="o_stat_text">
              Timetable
            </span>
          </div>
        </button>
      </xpath>
      <xpath expr="//page[@name='students']" position="after">
        <page name="faults" string="Faults">
          <group col="4">
            <field name="faults"/>
            <field name="cons_faults"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
