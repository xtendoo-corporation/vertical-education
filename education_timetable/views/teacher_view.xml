<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_education_teacher_form_timetable_inherit" model="ir.ui.view">
    <field name="name">view.res.partner.form.inherit</field>
    <field name="model">res.partner</field>
    <field name='inherit_id' ref='base.view_partner_form'/>
    <field name="arch" type="xml">
      <page name='internal_notes' position="before">
        <page string="Sessions"  attrs="{'invisible':[('teacher','=', False)]}" >
          <group string="Sessions">
            <field name="session_ids" nolabel="1">
              <tree>
                <field name="date"/>
                <field name="subject_id"/>
                <field name="group_id"/>
              </tree>
            </field>
          </group>
        </page>
      </page>
    </field>
  </record>
</odoo>
