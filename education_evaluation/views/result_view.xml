<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_education_result_form" model="ir.ui.view">
      <field name="name">view.education_result.form</field>
      <field name="model">education.result</field>
      <field name="arch" type="xml">
        <form string="Education Result">
          <sheet>
            <group name="main" col="4">
              <field name="student_id"/>
              <field name="score"/>
              <field name="exam_id"/>
              <field name="record_subject_group_id"/>
              <field name="grade_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_education_result_tree" model="ir.ui.view">
      <field name="name">view.education.result.tree</field>
      <field name="model">education.result</field>
      <field name="arch" type="xml">
        <tree string="Education Result">
          <field name="exam_id"/>
          <field name="student_id"/>
          <field name="score"/>
        </tree>
      </field>
    </record>
    <record id="view_education_result_search" model="ir.ui.view">
      <field name="name">view.education_result.search</field>
      <field name="model">education.result</field>
      <field name="arch" type="xml">
        <search string="Education Result">
          <field name="exam_id"/>
          <field name="student_id"/>
          <field name="score"/>
          <group string="Group By" name="groupby">
            <filter string="Exam" context="{'group_by': 'exam_id'}"/>
            <filter string="Student" context="{'group_by': 'student_id'}"/>
            <filter string="Score" context="{'group_by': 'score'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="education_result_action" model="ir.actions.act_window">
      <field name="name">Education Result</field>
      <field name="res_model">education.result</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Education Result.
        </p>
      </field>
    </record>

    <menuitem id="education_result_menu" parent="education_evaluation.education_exam_root" action="education_result_action" sequence="20"/>
  </data>
</odoo>
