<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_education_exam_form" model="ir.ui.view">
      <field name="name">view.education.exam.form</field>
      <field name="model">education.exam</field>
      <field name="arch" type="xml">
        <form string="Education Exam">
          <header>
            <button string="Set Planned" class="oe_highlight" name="set_planned" type="object" context="{}" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            <button string="Set Done" class="oe_highlight" name="set_done" type="object" context="{}" attrs="{'invisible': [('state', '!=', 'planned')]}"/>
            <button string="Set Cancel" class="oe_highlight" name="set_cancel" type="object" context="{}" attrs="{'invisible': [('state', '!=', 'done')]}"/>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <group name="main">
              <h1>
                <field name="name"/>
              </h1>
            </group>
            <group name="information" col="4">
              <field name="group_id" domain="[('state', 'in', ['active'])]"/>
              <field name="subject_id" domain="[('course_ids', 'in', group_id.course_id.subject_ids.mapped('subject_id').ids)]"/>
              <field name="weight"/>
              <field name="date"/>
              <field name="grading_id"/>
            </group>
            <field name="company_id" invisible="1"/>
            <group string="Results" attrs="{'invisible': [('state', '=', 'draft')]}">
              <field name="result_ids" nolabel="1">
                <tree editable="bottom">
                  <field name="student_id"/>
                  <field name="score"/>
                </tree>
              </field>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    <record id="view_education_exam_tree" model="ir.ui.view">
      <field name="name">view.education.exam.tree</field>
      <field name="model">education.exam</field>
      <field name="arch" type="xml">
        <tree string="Education Exam">
          <field name="name"/>
          <field name="group_id"/>
          <field name="subject_id"/>
          <field name="date"/>
          <field name="grading_id"/>
          <field name="state"/>
          <field name="company_id" invisible="1"/>
        </tree>
      </field>
    </record>
    <record id="view_education_exam_search" model="ir.ui.view">
      <field name="name">view.education.exam.search</field>
      <field name="model">education.exam</field>
      <field name="arch" type="xml">
        <search string="Education Exam">
          <!-- <field name="name"/> -->
          <field name="group_id"/>
          <field name="subject_id"/>
          <field name="date"/>
          <field name="state"/>
          <group string="Group By" name="groupby">
            <!-- <filter string="Name" context="{'group_by': 'name'}"/> -->
            <filter string="Group" context="{'group_by': 'group_id'}"/>
            <filter string="Subject" context="{'group_by': 'subject_id'}"/>
            <filter string="Date" context="{'group_by': 'date'}"/>
            <filter string="State" context="{'group_by': 'state'}"/>
          </group>
        </search>
      </field>
    </record>
    <record id="education_exam_action" model="ir.actions.act_window">
      <field name="name">Education Exam</field>
      <field name="res_model">education.exam</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Education Exam.
        </p>
      </field>
    </record>
    <menuitem id="education_exam_root" parent="education.education_base_menu" name="Evaluations" sequence="50"/>
    <menuitem id="education_exam_menu" parent="education_exam_root" action="education_exam_action" sequence="20"/>
  </data>
</odoo>
