<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_education_grading_scale_form" model="ir.ui.view">
      <field name="name">view.education.grading.scale.form</field>
      <field name="model">education.grading.scale</field>
      <field name="arch" type="xml">
        <form string="Education Grading Scale">
          <sheet>
            <group>
              <group>
                <field name="name" required="1"/>
              </group>
              <group>
                <field name="decimals_number" required="1"/>
              </group>
            </group>
            <group string="Grades">
              <field name="grade_ids" nolabel="1">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="start"/>
                  <field name="end"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="view_education_grading_scale_tree" model="ir.ui.view">
      <field name="name">view.education.grading.scale.tree</field>
      <field name="model">education.grading.scale</field>
      <field name="arch" type="xml">
        <tree string="Education Grading Scale">
          <field name="name"/>
          <field name="decimals_number"/>
          <field name="grade_ids" widget="many2many_tags"/>
        </tree>
      </field>
    </record>

    <record id="view_education_grading_scale_search" model="ir.ui.view">
      <field name="name">view.education.grading.scale.search</field>
      <field name="model">education.grading.scale</field>
      <field name="arch" type="xml">
        <search string="Education Grading Scale">
          <field name="name"/>
          <field name="decimals_number"/>
          <group string="Group By" name="groupby">
            <filter string="Name" context="{'group_by': 'name'}"/>
            <filter string="Decimal Numbers" context="{'group_by': 'decimals_number'}"/>
          </group>
        </search>
      </field>
    </record>
    <record id="education_grading_scale_action" model="ir.actions.act_window">
      <field name="name">Education Grading Scale</field>
      <field name="res_model">education.grading.scale</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Education Grading Scale.
        </p>
      </field>
    </record>
    <menuitem id="education_grading_scale_menu" parent="education.education_config_root" action="education_grading_scale_action" sequence="60"/>
  </data>
</odoo>
